<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yzh.rfidbike_police.activity.MainNewActivity">

    <com.yzh.rfidbike_police.view.widgets.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerTitle="上牌登记"
        app:leftIcon="@mipmap/arrow_left"
        app:leftIconVisible="gone"
        app:rightTextVisible="gone"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_100"
        android:gravity="center"
        android:padding="@dimen/layout_x_10"
        >

        <Button
            android:id="@+id/btn_back"
            style="@style/btn_base"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_x_14"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_base"
            android:text="上一步"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_next"
            style="@style/btn_base"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_x_14"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_base"
            android:text="下一步"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/btn_commit"
            style="@style/btn_base"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_x_14"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_base"
            android:text="提交"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>
