<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/layout_y_5"
    android:layout_marginTop="@dimen/layout_y_5"
    android:background="@color/white"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_div"
        android:layout_width="@dimen/layout_x_4"
        android:layout_height="match_parent"
        android:background="@color/actionsheet_blue"/>

    <ImageView
        android:layout_marginLeft="@dimen/layout_x_10"
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/layout_x_40"
        android:layout_height="@dimen/layout_x_40"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ico_device"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_x_5"
android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_card_title"
                android:layout_width="@dimen/layout_x_80"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:textColor="@color/textDarkGray"
                android:textSize="@dimen/font_size_small"
                android:text="卡号:"/>
            <TextView
                android:id="@+id/tv_card"
                android:layout_width="@dimen/layout_x_200"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:textColor="@color/textDarkGray"
                android:textSize="@dimen/font_size_small"
                android:text="1111"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_plate_title"
                android:layout_width="@dimen/layout_x_80"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:textColor="@color/textDarkGray"
                android:textSize="@dimen/font_size_small"
                android:text="车牌号:"/>
            <TextView
                android:id="@+id/tv_plate"
                android:layout_width="@dimen/layout_x_200"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:textColor="@color/textDarkGray"
                android:textSize="@dimen/font_size_small"
                android:text="111111"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_x_30"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_status_title"
                android:layout_width="@dimen/layout_x_80"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:textColor="@color/textDarkGray"
                android:textSize="@dimen/font_size_small"
                android:text="状态:"/>
            <ImageView
                android:id="@+id/img_status_logo"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/layout_x_30"
                android:layout_height="@dimen/layout_x_30" />
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="@dimen/layout_x_200"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:textColor="@color/textDarkGray"
                android:textSize="@dimen/font_size_small"
                android:text="正常"/>


        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:layout_marginRight="@dimen/layout_x_10"
        android:layout_width="@dimen/layout_x_20"
        android:layout_height="@dimen/layout_x_20"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ico_arrow_right"/>
</LinearLayout>