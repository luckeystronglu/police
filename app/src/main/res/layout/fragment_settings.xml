<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.yzh.rfidbike_police.view.widgets.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerTitle="设置"
        app:leftIcon="@drawable/ico_arrow_left"
        app:leftIconVisible="gone"
        app:rightTextVisible="gone" />

    <ListView
        android:id="@+id/lv_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_margin_vertical_10"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/split_vertical_normal"/>


</LinearLayout>