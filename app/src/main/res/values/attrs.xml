<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Header">
        <attr name="leftIcon" format="reference"/>
        <attr name="rightText" format="reference|string"/>
        <attr name="headerTitle" format="reference|string"/>
        <attr name="leftIconVisible">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="rightTextVisible">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="absProgressBar">
        <attr name="myprogress" format="integer" />
        <attr name="backgroundColor" format="reference|color" />
        <attr name="textColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="progressBar">
        <attr name="startFillColor" format="reference|color" />
        <attr name="middleFillColor" format="reference|color" />
        <attr name="endFillColor" format="reference|color" />
        <attr name="arrowPointColor" format="reference|color" />
        <attr name="arrowPointRadius" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="circleProgressBar">
        <attr name="textSize" format="dimension|reference"/>
        <attr name="progressWidth" format="dimension|reference"/>
        <attr name="smallCircleColor" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="floatTextProgressBar">
        <attr name="triangleColor" format="reference|color" />
        <attr name="rectColor" format="reference|color" />
        <attr name="fillColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="InputView">
        <attr name="InputViewTitle" format="reference|string"/>
        <attr name="InputViewEditable" format="boolean"/>
        <attr name="InputViewContent" format="reference|string"/>
        <attr name="InputViewHint" format="reference|string"/>
        <attr name="InputViewMaxLength" format="reference|integer"/>
        <attr name="InputViewMarkVisible">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="InputViewInputType">
            <enum name="textPassword" value="0"/>
            <enum name="numberDecimal" value="1"/>
            <enum name="number" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="SelectView">
        <attr name="SelectViewIndicatorImg" format="reference"/>
        <attr name="SelectViewTitle" format="reference|string"/>
        <attr name="SelectViewHint" format="reference|string"/>
        <attr name="SelectViewMarkVisible">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
    </declare-styleable>
</resources>